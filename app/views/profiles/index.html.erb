<style>
.avatar-icon {
  	position: relative;
  	border-radius: 50%;
  	width: 268px;
  	height: 268px;
  	object-fit: cover;
}
.salvador-dal {
  	position: relative;
  	line-height: 100%;
}
.salvador-dal-wrapper {
  	display: flex;
  	flex-direction: column;
  	align-items: flex-start;
  	justify-content: flex-start;
}
.seguidores {
  	position: relative;
  	line-height: 120%;
}
.tags {
  	display: flex;
  	flex-direction: row;
  	align-items: flex-start;
  	justify-content: flex-start;
  	gap: 32px;
  	font-size: 20px;
  	color: #6c757d;
}
.botn {
  	border: 1px solid #272a2d;
  	display: flex;
  	flex-direction: row;
  	padding: 12px 16px;
  	align-items: flex-start;
  	justify-content: flex-start;
}
.botn1 {
  	display: flex;
  	flex-direction: row;
  	padding: 12px 16px;
  	align-items: flex-start;
  	justify-content: flex-start;
}
.botn-parent {
  	display: flex;
  	flex-direction: row;
  	align-items: flex-start;
  	justify-content: flex-start;
  	gap: 24px;
  	font-size: 24px;
}
.text {
  	flex: 1;
  	display: flex;
  	flex-direction: column;
  	align-items: flex-start;
  	justify-content: flex-start;
  	gap: 48px;
}
.texto {
  	width: 100%;
  	position: relative;
  	display: flex;
  	flex-direction: row;
  	align-items: center;
  	justify-content: flex-start;
  	gap: 48px;
  	text-align: left;
  	font-size: 96px;
  	color: #272a2d;
  	font-family: 'Instrument Serif';
}



</style>
<hr>
<hr>
<hr>
<hr>


<div class="texto d-flex m-5" >
  <img class="avatar-icon" alt="" src="<%= cl_image_path(@user.photo.key)%>" />
  <div class="text ">
    <div class="salvador-dal-wrapper">
      <i class="salvador-dal"><%= @user.email.split("@").first.capitalize %></i>
    </div>
    <div class="botn-parent d-flex">

      <div class="botn1">
      <% if user_signed_in? %>
        <% if current_user == @user %>
          <%= link_to "Edit profile art",  edit_user_registration_path(@user), class: 'button text-decoration-none' %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>


<div class="artpost-container gap-5 mb-5">
  <p style="color: green"><%= notice %></p>
  <div class="d-flex w-100 justify-content-between align-items-center">
    <h1 class="mb-5">Obras recientes</h1>
    <div>
    </div>
  </div>
  <div id="arts" class="w-100 gap-5">
    <div class="justify-content-between row">
      <% @user.arts.each_slice(4) do |art_group| %>
        <div class="mb-5 w-100 row">
          <% art_group.each do |art| %>
            <div class="w-25">
              <%= render "shared/artcard", art: art %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
