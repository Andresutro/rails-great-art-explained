
<div style='display: flex ; align-items: center; gap: 48px; align-self: stretch;'>
  <div  style="background-image: url(<%= cl_image_path(@user.photo.key)%>); background-size: cover; background-position: center;">
  </div>
  <div style='display: flex; flex-direction: column; align-items: flex-start; gap: 48px; flex: 1 0 0;' >
    <div>
      <h1><%= @user.email.split('@').first.capitalize %></h1>
    </div>
  </div>
</div>


<div class="artpost-container gap-5 mb-5">
  <p style="color: green"><%= notice %></p>
  <div class="d-flex w-100 justify-content-between align-items-center">
    <h1 class="mb-5">Obras recientes</h1>
    <div>
      <%= link_to "New art", new_art_path, class: 'button text-decoration-none' %>
    </div>
  </div>
  <div id="arts" class="w-100 gap-5">
    <div class="justify-content-between row">
      <% @user.arts.each_slice(4) do |art_group| %>
        <div class="mb-5 w-100 row">
          <% art_group.each do |art| %>
            <div class="w-25">
              <%= render "shared/artcard", art: art %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
