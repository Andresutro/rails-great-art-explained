<div class="d-flex bg-white align-items-center justify-content-between">
  <%# Left %>
  <div class="w-50 welcome-container align-items-center">
    <p id="registration" class="h2 w-75 text-center">Bienvenido de vuelta a Great Art Explained</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }, html: { class: "w-100" }) do |f| %>
      <div class="my-5">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: false,
                    placeholder: "Email",
                    class: "w-100" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: false,
                    placeholder: "Contraseña",
                    class: "w-100" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="mt-3 text-center button">
        <%= f.button :submit, "Inicia sesión", class:'h3 w-100' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <%# Right %>
  <div class="d-flex align-items-center w-50" style="background-image: url(https://res.cloudinary.com/dygidrhdn/image/upload/v1688520890/europeana-MvR30qxn-MM-unsplash_1_2_hrwjro.jpg); background-size: cover; height: 150vh;">
  </div>
</div>
